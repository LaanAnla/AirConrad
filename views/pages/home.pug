extend ../partials/layout.pug

block variables
  - var template = 'home'

block content 
  .home#smooth-wrapper
    .home__wrapper#smooth-content
      section.home__banner(data-client="WELCOME")
        .home__banner__title__wrapper
          canvas#webgl 
          h1.home__banner__title 
            | Discover our collection and
            br
            a.green-text-link#win-console
              span.green-text Win a PS5
          .home__banner__scroll__down
            p.home__banner__scroll__down__text scroll down 
            img.home__banner__scroll__down__media(src='arrow-down.svg')


      section.home__collection(data-client="COLLECTION") 
        img.pixel1(src="pixels.svg" data-speed="2")
        .home__collection__title__introduction__wrapper
          h2.home__collection__title__introduction(data-speed="clamp(1.1)") Discover the collection
        .home__collection__product__wrapper
          figure.home__collection__product(data-speed="clamp(0.9)")
            .home__collection__product__photo
              a(href="#")
                img(src="hoodies-air-conrad.jpg")
              p.photo Grappling Short "air conrad"
              p.price price : 59€
          figure.home__collection__product(data-speed="clamp(1.1)")
            .home__collection__product__photo
              a(href="#")
                img(src="hoodies-air-conrad.jpg")
              p.photo Rashguard "air conrad"
              p.price price : 59€

        .home__collection__product__wrapper
          figure.home__collection__product(data-speed="clamp(1.1)")
            .home__collection__product__photo
              a(href="#")
                img(src="hoodies-air-conrad.jpg")
              p.photo Tee-shirt "air conrad"
              p.price price : 59€
          figure.home__collection__product(data-speed="clamp(0.9)")
            .home__collection__product__photo
              a(href="#")
                img(src="hoodies-air-conrad.jpg")
              p.photo Hoddies "air conrad"
              p.price price : 59€

      section.home__ps5(id="console" data-client="WIN A CONSOLE")
        img.pixel1(src="pixels.svg" data-speed="2")
        .home__ps5__title__introduction__wrapper
          h2.home__ps5__title__introduction(data-speed="1") enter the draw
          h2.home__ps5__title__introduction(data-speed="1.3") win a PS5
        canvas#webglPS5
        p.credit "PS5 Box - Accurate scale" (https://skfb.ly/orKZ7) by trainhard is licensed under Creative Commons Attribution (http://creativecommons.org/licenses/by/4.0/).

      section.home__ps5__rules(data-client="WIN A CONSOLE")
        .home__ps5__rules__title__wrapper
          .home__ps5__rules__title
            .home__ps5__rules__h2__wrapper
              h2 Follow these steps and try to win a PS5 
            .step__one 
              .step__number 
                p 1
              .step__lines
                .step__line
              .step__text
                p Buy 1 or more products ✅
            .step__one
              .step__number 
                p 2
              .step__lines
                .step__line
              .step__text
                p
                  | Follow
                  | &nbsp;
                  a.step__text__link(href="https://www.instagram.com/athletesonthemat/" rel="noreferrer noopener" target="_blank")
                    | athletesonthemat 
                  | &nbsp;
                  | on Instagram ✅
            .step__one
              .step__number
                p 3
              .step__lines 
                .step__line
              .step__text
                p Like and Tag 2 friends on the "air conrad" post on instagram  ✅
            .step__one
              .step__number   
                p 4
              .step__lines
                .step__line 
              .step__text
                p Winner will be drawn at random on 23 November 2023 on instagram ✅

      section.home__genesis(data-client="GENESIS")

      include ../partials/footer.pug
    